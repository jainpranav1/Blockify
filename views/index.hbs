</head>
<body>
    <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center header-transparent">
    <div class="container d-flex justify-content-between align-items-center">

      <div id="logo">
        <h1><a href="http://localhost:3000/">Blockify</a></h1>
      </div>

    </div>
  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section id="hero">

    <div class="hero-text" data-aos="zoom-out">
      <h2>Welcome to Blockify</h2>
      <p>Blockify enables students to cover up answers for studying</p>
        <form method="POST" enctype="multipart/form-data">
            <label for="file-upload" class="btn-get-started scrollto">
                <i class="fa fa-cloud-upload"></i> Choose File
              </label>
              <input id="file-upload" name='upload_image' type="file" style="display:none;">
            <input class="btn btn-outline-secondary" type="submit" value="Submit"/>
        </form>
    </div>
  </section><!-- End Hero Section -->

  <script>
    $('#file-upload').change(function() {
      var i = $(this).prev('label').clone();
      var file = $('#file-upload')[0].files[0].name;
      $(this).prev('label').text(file);
    });
  </script>   
</body>
</html>